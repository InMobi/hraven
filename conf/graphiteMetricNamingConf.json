            {
               "regex":".*oozie:launcher:T=(.*):W=(.*):A=(.*):ID=(.*)",
               "with":"ozl:$1:$2:$3"
            },
            {
               "regex":".*oozie:action:T=(.*):W=(.*):A=(.*):ID=[0-9]{7}-[0-9]{15}-oozie-oozi-W(.*)",
